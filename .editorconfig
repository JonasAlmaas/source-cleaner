root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{h,c}]
indent_style = tab
tab_width = 8

[*.json]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 8

[*.md]
trim_trailing_whitespace = false

[*.tst]
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = false
